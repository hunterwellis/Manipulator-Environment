        </joint>

        <!--base joints-->
        <!--J1-->
        <joint name="J1" type="continuous">
                <parent link="baseplate"/>
                <child link="base_pulley"/>
                <origin xyz="0 0 0.016" rpy="0 0 0" />
                <axis xyz="0 0 1"/>
        </joint>
        <joint name="base_pulley_structure_joint" type="fixed">
