<?xml version="1.0"?>
<robot name="arm">

        <material name="white">
                <color rgba="0.9 0.9 0.9 1" />
        </material>

        <material name="grey">
                <color rgba="0.5 0.5 0.5 1" />
        </material>

        <link name="base_link">
                <visual>
                        <geometry>
                                <mesh filename="package://arm_description/meshes/stand/mounting_plate.stl" scale ="0.001 0.001 0.001"/>
                        </geometry>
                        <origin xyz="0 0 0" rpy="1.5708 0 0" />
                        <material name="white" />
                </visual>
        </link>
        <link name="base_tube">
                <visual>
                        <geometry>
                                <mesh filename="package://arm_description/meshes/stand/base_tube.stl" scale ="0.001 0.001 0.001"/>
                        </geometry>
                        <origin xyz="-0.04 0.04 0" rpy="1.5708 0 0" />
                        <material name="grey" />
                </visual>
        </link>

        <joint name="base_link_tube_joint" type="fixed">
                <parent link="base_link" />
                <child link="base_tube" />
                <origin xyz="0 0 0.02" rpy="0 0 0" />
        </joint>
</robot>
